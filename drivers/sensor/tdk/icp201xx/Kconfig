menuconfig ICP201XX
	bool "ICP201xx Barometric Pressure and Temperature Sensor"
	default y
	depends on DT_HAS_INVENSENSE_ICP201XX_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICP201XX),i2c)
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICP201XX),spi)
  select USE_EMD_ICP201XX
	help
	  Enable driver for ICP101xx Barometric Pressure and Temperature Sensor.

if ICP201XX
config ICP201XX_TRIGGER
	bool
	default y
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICP201XX),int-gpios)

choice ICP201XX_TRIGGER_MODE
	prompt "Trigger mode"
	default ICP201XX_TRIGGER_GLOBAL_THREAD
	depends on ICP201XX_TRIGGER
	help
		Specify the type of triggering to be used by the driver.

config ICP201XX_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"

config ICP201XX_TRIGGER_OWN_THREAD
	bool "Use own thread"

endchoice

config ICP201XX_THREAD_PRIORITY
	int "Thread priority"
	depends on ICP201XX_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICP201XX_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ICP201XX_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ICP201XX
