config TDK_APEX
	bool

menuconfig ICM456XX
	bool "ICM45686 Six-Axis Motion Tracking Device"
	default y
	depends on ZEPHYR_HAL_TDK_MODULE
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45686),spi)
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45686),i2c)
	select TDK_APEX if $(dt_node_str_prop_equals,$(dt_nodelabel_path,icm45686),apex,pedometer) \
		|| $(dt_node_str_prop_equals,$(dt_nodelabel_path,icm45686),apex,tilt) \
		|| $(dt_node_str_prop_equals,$(dt_nodelabel_path,icm45686),apex,smd) \
		|| $(dt_node_str_prop_equals,$(dt_nodelabel_path,icm45686),apex,wom)
	select USE_EMD_ICM45686
	select SENSOR_ASYNC_API
	help
	  Enable driver for ICM456XX SPI-based or I2C-based Six-Axis or Three-Axis Motion Tracking device.

if ICM456XX

choice ICM456XX_TRIGGER_MODE
	prompt "Trigger mode"
	default ICM456XX_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config ICM456XX_TRIGGER_NONE
	bool "No trigger"

config ICM456XX_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM45686),int-gpios)
	select ICM456XX_TRIGGER

config ICM456XX_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM45686),int-gpios)
	select ICM456XX_TRIGGER

endchoice

config ICM456XX_TRIGGER
	bool

config ICM456XX_THREAD_PRIORITY
	int "Thread priority"
	depends on ICM456XX_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICM456XX_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ICM456XX_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ICM456XX
