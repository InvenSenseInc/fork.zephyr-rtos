# ICM42670S IMU sensor configuration options
# Copyright (c) 2023 TDK Invensense
# SPDX-License-Identifier: Apache-2.0

menuconfig ICM42670S
	bool "ICM42670S 6-Axis Motion Tracking Device"
	default y
	depends on DT_HAS_INVENSENSE_ICM42670S_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM42670S),i2c)
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM42670S),spi)
	help
	  Enable driver for ICM42670S I2C-based or SPI-based Six-Axis Motion Tracking device.

if ICM42670S

config ICM42670S_APEX
	bool "ICM42670S APEX features"
	default n

choice APEX_FEATURES
	prompt "ICM42670S APEX features"
	depends on ICM42670S_APEX
	default ICM42670S_APEX_PEDOMETER
	help
	  Select APEX feature for ICM42670S sensor.
config ICM42670S_APEX_PEDOMETER
	bool "Pedometer: Tracks step count"
config ICM42670S_APEX_TILT
	bool "Tilt Detection: Detect the Tilt angle exceeds 35 degrees"
config ICM42670S_APEX_SMD
	bool "Significant Motion Detector (SMD): Detects significant motion based on accelerometer data"
config ICM42670S_APEX_WOM
	bool "Wake on Motion (WoM): Detects motion when accelerometer samples exceed a programmable threshold"
endchoice

config ICM42670S_AML
	bool "ICM42670S Air Motion Library (AML)"
	default n

choice AML_FEATURES
	prompt "ICM42670S AML features"
	depends on ICM42670S_AML
	default ICM42670S_AML_POINTING
	help
		Select AML feature for ICM42670S sensor.
config ICM42670S_AML_POINTING
	bool "Delta values for pointing"
config ICM42670S_AML_GESTURES
	bool "Orientation of the remote and detected swipes"
config ICM42670S_AML_GYR_OFFSET
	bool "Computed 3-axis raw gyroscope offsets"
config ICM42670S_AML_QUATERNION
	bool "Computed W, X, Y and Z quaternion coefficients"
endchoice

config ICM42670S_THREAD_PRIORITY
	int "Thread priority"
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICM42670S_THREAD_STACK_SIZE
	int "Thread stack size"
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ICM42670S
